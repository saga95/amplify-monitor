    "viewsContainers": {
      "activitybar": [
        {
          "id": "amplify-monitor",
          "title": "Amplify Monitor",
          "icon": "resources/amplify.svg"
        }
      ]
    },
    "views": {
      "amplify-monitor": [
        {
          "id": "amplifyApps",
          "name": "Apps",
          "icon": "$(cloud)",
          "contextualTitle": "Amplify Apps"
        },
        {
          "id": "amplifyEnvVars",
          "name": "Environment Variables",
          "icon": "$(key)",
          "contextualTitle": "Environment Variables"
        },
        {
          "id": "amplifyJobs",
          "name": "Recent Jobs",
          "icon": "$(history)",
          "contextualTitle": "Build Jobs"
        },
        {
          "id": "amplifyDiagnosis",
          "name": "Diagnosis",
          "icon": "$(lightbulb)",
          "contextualTitle": "Build Diagnosis"
        },
        {
          "id": "amplifyMigration",
          "name": "Gen2 Migration",
          "icon": "$(rocket)",
          "contextualTitle": "Gen2 Migration Analysis"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "amplifyApps",
        "contents": "No Amplify apps found.\n\nMake sure you have:\n1. AWS credentials configured (AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY)\n2. amplify-monitor CLI installed\n\n[Configure Settings](command:amplify-monitor.openSettings)\n[Refresh Apps](command:amplify-monitor.listApps)\n\n---\n\n**Need to create an app?**\n[Open AWS Amplify Console](https://console.aws.amazon.com/amplify/)"
      },
      {
        "view": "amplifyJobs",
        "contents": "Select an app and branch to view jobs.\n\n[Select App](command:amplify-monitor.selectApp)"
      },
      {
        "view": "amplifyDiagnosis",
        "contents": "Run diagnosis on a failed build to see issues.\n\n[Diagnose Latest Failure](command:amplify-monitor.diagnose)"
      },
      {
        "view": "amplifyEnvVars",
        "contents": "Select an app and branch to view environment variables.\n\n[Select App](command:amplify-monitor.selectApp)"
      },
      {
        "view": "amplifyMigration",
        "contents": "Analyze your Amplify Gen1 project for migration readiness.\n\n[Analyze Migration](command:amplify-monitor.analyzeMigration)\n\n---\n\n**Learn more:**\n[Migration Documentation](command:amplify-monitor.openMigrationDocs)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "amplify-monitor.openDashboard",
          "when": "view == amplifyApps",
          "group": "navigation@0"
        },
        {
          "command": "amplify-monitor.refresh",
          "when": "view == amplifyApps || view == amplifyJobs",
          "group": "navigation"
        },
        {
          "command": "amplify-monitor.openSettings",
          "when": "view == amplifyApps",
          "group": "navigation"
        },
        {
          "command": "amplify-monitor.diagnose",
          "when": "view == amplifyDiagnosis",
          "group": "navigation"
        },
        {
          "command": "amplify-monitor.shareDiagnosis",
          "when": "view == amplifyDiagnosis",
          "group": "navigation"
        },
        {
          "command": "amplify-monitor.refreshEnvVars",
          "when": "view == amplifyEnvVars",
          "group": "navigation"
        },
        {
          "command": "amplify-monitor.addEnvVar",
          "when": "view == amplifyEnvVars",
          "group": "navigation"
        },
        {
          "command": "amplify-monitor.startBuild",
          "when": "view == amplifyJobs",
          "group": "navigation@1"
        },
        {
          "command": "amplify-monitor.openInConsole",
          "when": "view == amplifyApps",
          "group": "navigation"
        },
        {
          "command": "amplify-monitor.analyzeMigration",
          "when": "view == amplifyMigration",
          "group": "navigation@1"
        },
        {
          "command": "amplify-monitor.openMigrationDocs",
          "when": "view == amplifyMigration",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "amplify-monitor.copyIssue",
          "when": "viewItem == diagnosis-issue || viewItem == diagnosis-issue-fixable",
          "group": "inline@2"
        },
        {
          "command": "amplify-monitor.showQuickFixes",
          "when": "viewItem == diagnosis-issue-fixable",
          "group": "inline@1"
        },
        {
          "command": "amplify-monitor.revealEnvVar",
          "when": "viewItem == env-var",
          "group": "inline@1"
        },
        {
          "command": "amplify-monitor.editEnvVar",
          "when": "viewItem == env-var",
          "group": "inline@2"
        },
        {
          "command": "amplify-monitor.deleteEnvVar",
          "when": "viewItem == env-var",
          "group": "inline@3"
        },
        {
          "command": "amplify-monitor.stopBuild",
          "when": "viewItem == job-running",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Amplify Monitor",
      "properties": {
        "amplifyMonitor.cliPath": {
          "type": "string",
          "default": "amplify-monitor",
          "description": "Path to the amplify-monitor CLI executable",
          "order": 1
        },
        "amplifyMonitor.awsProfile": {
          "type": "string",
          "default": "",
          "description": "AWS profile name for cross-account access. Leave empty to use default credentials. Configure profiles with 'aws configure --profile <name>'",
          "order": 2
        },
        "amplifyMonitor.defaultAppId": {
          "type": "string",
          "default": "",
          "description": "Default Amplify app ID",
          "order": 3
        },
        "amplifyMonitor.defaultBranch": {
          "type": "string",
          "default": "main",
          "description": "Default branch name",
          "order": 4
        },
        "amplifyMonitor.autoRefresh": {
          "type": "boolean",
          "default": false,
          "description": "Automatically refresh job status",
          "order": 5
        },
        "amplifyMonitor.autoRefreshInterval": {
          "type": "number",
          "default": 60,
          "description": "Auto-refresh interval in seconds",
          "order": 6
        },
        "amplifyMonitor.autoWatchBuilds": {
          "type": "boolean",
          "default": true,
          "description": "Automatically watch for build status after git push",
          "order": 7
        },
        "amplifyMonitor.buildPollInterval": {
          "type": "number",
          "default": 10,
          "minimum": 5,
          "maximum": 60,
          "description": "How often to check build status (in seconds) when watching builds",
          "order": 8
        },
        "amplifyMonitor.showBuildNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when builds succeed or fail",
          "order": 9
        },
        "amplifyMonitor.autoDiagnoseFailures": {
          "type": "boolean",
          "default": true,
          "description": "Automatically diagnose build failures and show root cause",
          "order": 10
        },
        "amplifyMonitor.webhook.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable webhook notifications for build events",
          "order": 11
        },
        "amplifyMonitor.webhook.url": {
          "type": "string",
          "default": "",
          "description": "Webhook URL (Slack, Teams, Discord, or custom)",
          "order": 12
        },
        "amplifyMonitor.webhook.type": {
          "type": "string",
          "enum": ["slack", "teams", "discord", "custom"],
          "default": "slack",
          "description": "Webhook service type",
          "order": 13
        },
        "amplifyMonitor.webhook.events.buildStarted": {
          "type": "boolean",
          "default": false,
          "description": "Send notification when build starts",
          "order": 14
        },
        "amplifyMonitor.webhook.events.buildSucceeded": {
          "type": "boolean",
          "default": true,
          "description": "Send notification when build succeeds",
          "order": 15
        },
        "amplifyMonitor.webhook.events.buildFailed": {
          "type": "boolean",
          "default": true,
          "description": "Send notification when build fails",
          "order": 16
        },
        "amplifyMonitor.webhook.includeLogExcerpt": {
          "type": "boolean",
          "default": true,
          "description": "Include log excerpt in failure notifications",
          "order": 17
        },
        "amplifyMonitor.webhook.mentionOnFailure": {
          "type": "string",
          "default": "",
          "description": "Mention to include on failures (e.g., @here, @channel, <@USER_ID>)",
          "order": 18
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
