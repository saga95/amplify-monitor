{
  "name": "amplify-monitor",
  "displayName": "Amplify Monitor",
  "description": "Monitor AWS Amplify builds and diagnose failures with AI-powered root cause analysis. Detect 20+ common build issues including lock file mismatches, Node.js conflicts, missing env vars, and more.",
  "version": "0.1.29",
  "publisher": "SagaraHarasgama",
  "author": {
    "name": "saga95"
  },
  "license": "MIT",
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#232F3E",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saga95/amplify-monitor"
  },
  "bugs": {
    "url": "https://github.com/saga95/amplify-monitor/issues"
  },
  "homepage": "https://github.com/saga95/amplify-monitor#readme",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Visualization"
  ],
  "keywords": [
    "aws",
    "amplify",
    "devops",
    "build",
    "deploy",
    "ci/cd",
    "diagnostics",
    "debugging",
    "cloud",
    "serverless",
    "environment variables",
    "amplify.yml"
  ],
  "badges": [
    {
      "url": "https://img.shields.io/github/v/release/saga95/amplify-monitor",
      "href": "https://github.com/saga95/amplify-monitor/releases",
      "description": "GitHub Release"
    },
    {
      "url": "https://img.shields.io/github/license/saga95/amplify-monitor",
      "href": "https://github.com/saga95/amplify-monitor/blob/main/LICENSE",
      "description": "License"
    }
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:yaml",
    "workspaceContains:**/amplify.yml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "amplify-monitor.amplify",
        "fullName": "Amplify Monitor",
        "name": "amplify",
        "description": "Analyze AWS Amplify build failures and get fix suggestions",
        "isSticky": true,
        "commands": [
          {
            "name": "diagnose",
            "description": "Diagnose the latest failed build"
          },
          {
            "name": "logs",
            "description": "Show build logs"
          },
          {
            "name": "fix",
            "description": "Get fix suggestions for build failures"
          },
          {
            "name": "status",
            "description": "Check status of all Amplify apps"
          }
        ]
      }
    ],
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/amplify.json"
      }
    ],
    "yamlValidation": [
      {
        "fileMatch": "amplify.yml",
        "url": "./schemas/amplify-buildspec.schema.json"
      },
      {
        "fileMatch": "amplify.yaml",
        "url": "./schemas/amplify-buildspec.schema.json"
      }
    ],
